{
    "manifest_version": 2,
    "name": "네이버뉴스 광고/댓글 감추기",
    "description": "네이버뉴스 기사내용만 보겠습니다.",
    "version": "1.0.0",
    "background": {
        "scripts": [
            "blocker.js"
        ],
        "persistent": true
    },
    "content_scripts": [
        {
          "matches": [
              "https://news.naver.com/main/read.nhn*"
            ],
          "run_at": "document_end",
          "js": [
              "cleaner.js"
            ]
        }
    ],
    "browser_action": {
        "default_icon": "naver-logo.png"
    },
    "permissions": [
        "background",
        "tabs",
        "webRequest",
        "webRequestBlocking",
        "https://*/*"
    ]
}